<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
    
<hibernate-mapping package="com.sternkn.inhibernate.entities.im1.xml">

   <class name="CreditCard" table="TH_IM1_CREDIT_CARD">
   
      <id name="id" column="TH_CRC_RECID">
         <generator class="sequence-identity">
            <param name="sequence">SEQ_TH_IM1_CREDIT_CARD_RECID</param>
         </generator>
      </id>
      
      <property name="owner" column="TH_CRC_OWNER"/>
      <property name="number" column="TH_CRC_NUMBER"/>
      <property name="expMonth" column="TH_CRC_EXP_MONTH"/>
      <property name="expYear" column="TH_CRC_EXP_YEAR"/>
   </class>
</hibernate-mapping>